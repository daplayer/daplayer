<form class="configuration">
  <div class="box">
    <h2>{{t 'meta.configuration.general'}}</h2>

    <h3>{{t 'meta.configuration.locale'}}</h3>

    {{radio 'fr' 'locale' 'Fran√ßais' 'meta'}}
    {{radio 'en' 'locale' 'English'  'meta'}}
  </div>

  <div class="box">
    <h2>{{t 'sc.name'}}</h2>

    <h3>{{t 'sc.configuration.download'}}</h3>
    {{input 'download' 'soundcloud' true}}

    <div class="clearer"></div>

    {{#unless soundcloud.connected}}
      <span data-action="soundCloudSignIn" class="button tiny">
        <img src="assets/images/icons/soundcloud.svg"> {{t 'sc.connect'}}
      </span>
    {{else}}
      <span data-action="soundCloudSignOut" class="button tiny">
        {{g 'remove'}} {{t 'sc.disconnect'}}
      </span>
    {{/unless}}
  </div>


  <div class="box">
    <h2>{{t 'yt.name'}}</h2>

    <h3>{{t 'yt.configuration.download'}}</h3>
    {{input 'download' 'youtube' true}}

    <h3>{{t 'yt.configuration.quality.title' }}</h3>

    {{radio '720' 'quality' 'quality.hd'       'youtube'}}
    {{radio '480' 'quality' 'quality.medium'   'youtube'}}
    {{radio '360' 'quality' 'quality.low'      'youtube'}}

    {{#unless youtube.connected}}
      <span data-action="youTubeSignIn" class="button tiny">
        <img src="assets/images/icons/youtube.svg"> {{t 'yt.connect'}}
      </span>
    {{else}}
      <span data-action="youTubeSignOut" class="button tiny">
        {{g 'remove'}} {{t 'yt.disconnect'}}
      </span>
    {{/unless}}
  </div>

  <div class="box">
    <h2>{{t 'local.name'}}</h2>

    <h3>{{t 'local.configuration.path'}}</h3>
    {{input 'path' 'local' true}}
  </div>

  <div class="box">
    <input type="submit" value="{{t 'meta.configuration.save'}}" class="button">
  </div>
</form>
