<div class="download box" data-id="{{ id }}">
  <div class="thumbnail">
    <img src="{{ icon }}">
  </div>

  <div class="description">
    {{#if date}}
      <div class="right">{{ date }}</div>
    {{/if}}

    <h3>{{ title }}</h3>
    <h4>{{ artist }}</h4>

    {{#unless date}}
      <div class="bar">
        <div class="progression"></div>
      </div>
    {{/unless}}
  </div>
</div>
