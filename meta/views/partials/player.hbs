<div class="controls">
  <div class="previous">{{g 'backward'}}</div>
  <div class="playpause">{{g 'play'}}</div>
  <div class="next">{{g 'forward'}}</div>
</div>

<div class="duration"></div>

<div class="timing">
  <span class="current">0:00</span> / <span class="total">0:00</span>
</div>

<div class="volume">
  {{g 'volume-up'}}

  <div class="volume-information">
    <div class="volume-value">
      <div class="current"></div>
    </div>

    <input type="range" class="circle" min="0" max="1" step="0.01">
  </div>
</div>

<div class="repeat">
  {{g 'repeat'}}
</div>

<div class="playing">
  <div class="set-icon">
    {{g 'list'}}
  </div>

  <div class="media-details">
    <div class="thumbnail">
      <img src="">

      <div class="shadow small video">{{g 'resize-full'}}</div>
      <div class="shadow small loading"></div>
    </div>

    <span class="title"></span>
    <span class="artist"></span>
  </div>

  <div class="set">
    <div class="details">
      <div class="switches">
        {{g 'repeat'}}
        {{g 'random'}}
      </div>

      <span class="title"></span>
      <span class="count"></span>
    </div>

    <div class="clearer"></div>

    <div class="items"></div>
  </div>
</div>
