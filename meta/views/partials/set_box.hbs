{{#if album}}
  <div class="set {{ service }}" data-id="{{ id }}"
     data-album="{{ album }}" data-artist="{{ artist.name }}">
{{else}}
  <div class="set {{ service }}" data-id="{{ id }}">
{{/if}}
  {{#unless isYouTube}}
    <div class="cover">
      <img src="{{ icon }}">
    </div>
  {{else}}
    <div class="information">
      <img src="{{ icon }}">

      <div class="legend">
        <h2>{{ title }}</h2>
        <h3>{{ items_count }} {{t 'meta.videos'}}</h3>
      </div>
    </div>
  {{/unless}}

  <div class="items">
    {{#unless isYouTube}}
      {{#if isSoundCloud}}
        <h2>{{ title }} <small>({{ human_time }})</small></h2>
      {{else}}
        <h2>{{ title }}</h2>
      {{/if}}

      <h3>
        {{#if isSoundCloud}}
          {{ artist }}
        {{else if album}}
          {{ artist.name }} - {{ items.length }} {{t 'meta.tracks'}}
        {{else}}
          {{ items.length }} {{t 'meta.items'}}
        {{/if}}
      </h3>
    {{/unless}}

    <ul>
      {{#each items}}
        {{set_item this}}
      {{/each}}
    </ul>
  </div>
</div>
