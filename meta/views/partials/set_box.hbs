<div class="set {{ service }} box" data-id="{{ id }}">
  <div class="cover">
    <img src="{{ icon }}">
  </div>

  <div class="items">
    <h2>{{ title }}</h2>

    <h3>
      {{#if isSoundCloud}}
        {{ artist }} &middot;
        <span class="count">{{ pluralize items.length 'item' }}</span>
      {{else if album}}
        {{ artist.name }} &middot;
        <span class="count">{{ pluralize items.length 'track' }}</span>
      {{else}}
        <span class="count">{{ pluralize items.length 'item' }}</span>
      {{/if}}
    </h3>

    <ul>
      {{#each items}}
        {{set_item this}}
      {{/each}}
    </ul>
  </div>
</div>
