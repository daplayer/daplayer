<h2>{{t 'add_to_playlist'}}</h2>

<nav class="navbar">
  <ul>
    {{#if soundcloud}}
      <li class="active" data-service="soundcloud">{{g 'cloud'}} {{t 'sc.name'}}</li>
    {{else if youtube}}
      <li class="active" data-service="youtube">{{g 'film'}} {{t 'yt.name'}}</li>
    {{/if}}

    {{#unless playlists.remote}}
      <li class="active" data-service="local">{{g 'music'}} {{t 'local.name'}}</li>
    {{else}}
      <li data-service="local">{{g 'music'}} {{t 'local.name'}}</li>
    {{/unless}}
  </ul>
</nav>

<form>
  <div class="items">
    {{#if playlists.remote}}
      <ul>
        {{#each playlists.remote.collection}}
          {{playlist_option this}}
        {{/each}}
      </ul>

      <ul class="hidden">
    {{else}}
      <ul>
    {{/if}}

      {{#each playlists.local}}
        {{playlist_option this}}
      {{/each}}
    </ul>
  </div>

  <div class="new_item">
    <input type="text" id="new_playlist" placeholder="Nouvelle playlist...">
  </div>

  <input type="hidden" name="record-id" value="{{ id }}">
  <input type="submit" class="button add_to_playlist" value="{{t 'meta.add'}}">
</form>
