<div class="banner">
  <div class="showcase">
    <div class="artist-thumbnail">
      <div class="thumbnail">
        {{g 'user'}}
      </div>

      <span class="title">{{ name }}</span>
    </div>
  </div>

  <div class="clearer"></div>

  <div class="navbar">
    <a href="#" class="active">{{g 'music'}} Fichiers Locaux</a>
  </div>
</div>

{{#if albums}}
  <h1>{{t 'local.files_menus.albums'}}</h2>

  {{#each albums}}
    {{playlist this}}
  {{/each}}
{{/if}}

{{#if singles}}
  <h1>{{t 'local.files_menus.singles'}}</h1>

  {{#each singles}}
    {{media_box this}}
  {{/each}}
{{/if}}
