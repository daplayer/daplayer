{{#unless token}}
  {{menu 'soundcloud' 'stream' 'activities'}}
{{/unless}}

<div class="timeline">
  {{#each activities.collection}}
    <div class="activity">
      <div class="icon">
        {{soundcloud_activity_icon type}}
      </div>

      <div class="description">
        {{soundcloud_activity_desc origin type}}
      </div>
    </div>

    {{#if this.hasTrack}}
      {{soundcloud_music_bar this.item}}
    {{else}}
      {{set_box this.item}}
    {{/if}}
  {{else}}
    <div class="message">{{t 'sc.feedback.no_activities'}}</div>
  {{/each}}
</div>
