<div class="soundcloud music bar" data-id="{{ id }}">
  <div class="thumbnail">
    <img src="{{ icon }}">
  </div>

  <div class="spotlight">
    <h3>{{ title }} <small>({{ human_time }})</small></h2>
    <h4>{{ artist }}</h4>

    <div class="information">
      {{g 'play'}} {{ playbacks }}
      {{g 'retweet'}} {{ reposts }}
    </div>

    <div class="options">
      {{ options }}
    </div>
  </div>

  <div class="clearer"></div>
</div>
