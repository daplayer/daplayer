<h2>{{t 'download'}}</h2>

<form data-service="soundcloud">
  <div class="left">
    <img src="{{ icon }}">

    <span class="flat_button" data-field="icon" data-picker="picture">
      {{g 'picture'}} &nbsp; {{t 'pick_picture'}}
    </span>

    <input type="hidden" name="icon" value="{{ icon }}">
  </div>

  <div class="right">
    <label>{{titleize ( t 'title')}} :</label>
    <input type="text" name="title" value="{{ title }}">

    <label>{{titleize ( t 'artist')}} :</label>
    <input type="text" name="artist" value="{{ real_artist }}">

    <label>{{titleize ( t 'genre')}} :</label>
    <input type="text" name="genre" value="{{ genre }}">

    <input type="hidden" name="id" value="{{ id }}">

  </div>

  <div class="clearer"></div>
  <hr>

  <input type="submit" class="button download" value="{{t 'download'}}">
</form>
